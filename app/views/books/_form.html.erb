<%= form_with model: book do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control book-title" %><br>
  </div>

  <div class="form-group">
    <%= f.label :opinion %><br>
    <%= f.text_area :body, class: "form-control book-body" %><br>
  </div>

  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>