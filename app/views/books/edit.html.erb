<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= render "layouts/errors", obj: @book %>

      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control title" %>
        </div>
        <div class="form-group">
          <%= f.label :opinion %>
          <%= f.text_area :body, class: "form-control body" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>

      <div>
        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>